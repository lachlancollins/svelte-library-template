{
	"name": "svelte-library-template",
	"version": "1.0.0",
	"description": "Insert description here",
	"packageManager": "pnpm@8.11.0",
	"type": "module",
	"types": "dist/index.d.ts",
	"module": "dist/index.js",
	"svelte": "./dist/index.js",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"import": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./package.json": "./package.json"
	},
	"files": [
		"dist",
		"src"
	],
	"scripts": {
		"lint": "prettier --check '**/*' --ignore-unknown && eslint . && svelte-check --tsconfig ./tsconfig.json",
		"format": "prettier --write '**/*' --ignore-unknown",
		"test": "vitest",
		"build": "svelte-package --input ./src --output ./dist && publint --strict"
	},
	"devDependencies": {
		"@sveltejs/package": "^2.2.2",
		"@sveltejs/vite-plugin-svelte": "^2.4.6",
		"@testing-library/jest-dom": "^6.1.4",
		"@testing-library/svelte": "^4.0.5",
		"@types/eslint": "^8.44.8",
		"@typescript-eslint/eslint-plugin": "^6.13.1",
		"@typescript-eslint/parser": "^6.13.1",
		"eslint-plugin-svelte": "^2.32.0",
		"prettier": "4.0.0-alpha.3",
		"prettier-plugin-svelte": "3.1.2",
		"svelte": "^4.0.0",
		"svelte-check": "^3.4.4",
		"svelte-eslint-parser": "^0.32.2",
		"vite": "4.5.0",
		"vitest": "^0.34.6"
	},
	"peerDependencies": {
		"svelte": ">=3 <5"
	}
}
